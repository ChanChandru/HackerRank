#include <stdio.h>
int main()
{   int a[size],n;ind=0;d[size],k=0;sum=0
    printf("Enter array size");
    scanf("%d",&n);
    for(int i=0;i<n;i++)
        scanf("%d",a[i]);
    for(int j=0;j<size;j++)
    {
        if(n==a[j])
        {
            ind=j;
        }
    }
    for(int j=0;j<size;j++)
    {
        if(j!=ind and j!=ind+1 and j!=ind-1)
        {
            sum+=a[j]
            k++;
        }
    }
    printf(sum)
    
}
